<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundMainItem" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/back_main_items</item>
    </style>

    <style name="BaseTheoryFragmentTitle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BaseTheoryFragmentContent" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="BackgroundToolbar" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextColor">@android:color/white</item>
    </style>
</resources>